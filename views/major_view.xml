<odoo>

    <!-- Tampilan Tree View -->  
    <record id="view_major_tree" model="ir.ui.view">
        <field name="name">laptop.major.tree</field>
        <field name="model">laptop.major</field>
        <field name="arch" type="xml">
            <tree string="Daftar Jurusan">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

 
    <!-- Tampilan Form View -->
    <record id="view_major_form" model="ir.ui.view">
        <field name="name">laptop.major.form</field>
        <field name="model">laptop.major</field>
        <field name="arch" type="xml">
            <form string="Data Jurusan">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <!-- Action untuk menu Jurusan -->
    <record id="action_major" model="ir.actions.act_window">
        <field name="name">Data Jurusan</field>
        <field name="res_model">laptop.major</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan data jurusan baru di sini.
            </p>
        </field>
    </record>
</odoo>
