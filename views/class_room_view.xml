<odoo>
    <record id="view_class_room_tree" model="ir.ui.view">
        <field name="name">laptop.class.room.tree</field>
        <field name="model">laptop.class.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="grade"/>
                <field name="major_id"/>
            </tree>
        </field>
    </record>

    <record id="view_class_room_form" model="ir.ui.view">
        <field name="name">laptop.class.room.form</field>
        <field name="model">laptop.class.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="grade"/>
                        <field name="major_id"/>
                    </group>
                    <notebook>
                        <page string="Daftar Siswa">
                            <field name="student_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="nis"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_class_room" model="ir.actions.act_window">
        <field name="name">Kelas</field>
        <field name="res_model">laptop.class.room</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
