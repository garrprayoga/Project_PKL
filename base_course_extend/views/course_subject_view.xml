<odoo>
    <record id="course_subject_view_tree_inherit" model="ir.ui.view">
        <field name="name">course.subject.tree.inherit</field>
        <field name="model">course.subject</field>
        <field name="inherit_id" ref="base_course.course_subject_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="category"/>
                <field name="duration"/>
            </xpath>
        </field>
    </record>
</odoo>