<odoo>
    <record id="view_borrow_laptop_report_wizard" model="ir.ui.view">
        <field name="name">borrow.laptop.report.wizard.form</field>
        <field name="model">borrow.laptop.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Laporan Peminjaman">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_print_report"
                            type="object"
                            string="Cetak PDF"
                            class="btn-primary"/>
                    <button name="action_export_excel"
                            type="object"
                            string="Export Excel"
                            class="btn-success"/>
                    <button string="Batal"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
                <group>
                    <field name="excel_file" filename="file_name" readonly="1" widget="binary"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_borrow_laptop_report_wizard" model="ir.actions.act_window">
        <field name="name">Laporan Peminjaman</field>
        <field name="res_model">borrow.laptop.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>