<odoo>
    <data>
        <record id="view_kelas_form" model="ir.ui.view">
            <field name="name">kelas.form</field>
            <field name="model">kelas</field>
            <field name="arch" type="xml">
                <form string="Data Kelas">
                    <sheet>
                        <!-- ========== HIERARCHY BARU ==========
                        TINGKATAN + JURUSAN (REQUIRED) -->
                        <group string="Informasi Kelas" col="4">
                            <field name="tingkat_id" required="1"/>
                            <field name="jurusan_id" required="1"/>
                            <field name="name" required="1"/>
                            <field name="status_pinjam"/>
                        </group>
                        <!-- ===================================== -->

                        <notebook>
                            <page string="Daftar Siswa">
                                <field name="student_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="email"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_kelas_tree" model="ir.ui.view">
            <field name="name">kelas.tree</field>
            <field name="model">kelas</field>
            <field name="arch" type="xml">
                <tree string="Daftar Kelas">
                    <field name="tingkat_id"/>
                    <field name="jurusan_id"/>
                    <field name="name"/>
                    <field name="status_pinjam"/>
                </tree>
            </field>
        </record>

        <record id="action_kelas" model="ir.actions.act_window">
            <field name="name">Data Kelas</field>
            <field name="res_model">kelas</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- HAPUS MENU - SUDAH ADA DI FILE MENU ANDA -->
        <!-- <menuitem id="menu_kelas_root"... /> -->
    </data>
</odoo>
