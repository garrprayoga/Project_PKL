<odoo>
    <data>
        <!-- FORM VIEW -->
        <record id="view_tingkat_sekolah_form" model="ir.ui.view">
            <field name="name">tingkat.sekolah.form</field>
            <field name="model">tingkat.sekolah</field>
            <field name="arch" type="xml">
                <form string="Data Tingkat Sekolah">
                    <sheet>
                        <group string="Informasi Tingkat" col="2">
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record id="view_tingkat_sekolah_tree" model="ir.ui.view">
            <field name="name">tingkat.sekolah.tree</field>
            <field name="model">tingkat.sekolah</field>
            <field name="arch" type="xml">
                <tree string="Daftar Tingkat Sekolah">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_tingkat_sekolah" model="ir.actions.act_window">
            <field name="name">Tingkat Sekolah</field>
            <field name="res_model">tingkat.sekolah</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
