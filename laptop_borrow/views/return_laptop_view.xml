<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_return_laptop_form" model="ir.ui.view">
        <field name="name">return.laptop.form</field>
        <field name="model">return.laptop</field>
        <field name="arch" type="xml">
            <form string="Pengembalian Barang">
                <header>
                    <button name="action_confirm_return"
                            type="object"
                            string="Konfirmasi Pengembalian"
                            class="btn btn-success"
                            invisible="state == 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>

                <sheet>
                    <!-- ========== HIERARCHY BARU ==========
                    TINGKATAN + JURUSAN + KELAS -->
                    <group string="Informasi Kelas" col="4">
                        <field name="tingkat_id" required="1"/>
                        <field name="jurusan_id" required="1"/>
                        <field name="class_id" required="1"
                              domain="[('tingkat_id', '=', tingkat_id), ('jurusan_id', '=', jurusan_id)]"/>
                    </group>
                    <!-- ===================================== -->

                    <group string="Informasi Pengembalian">
                        <group>
                            <field name="borrower_id" 
                                   domain="[('is_student','=',True),('class_id','=',class_id)]"/>
                            <field name="borrow_id" 
                                   domain="[('status','=','dipinjam'),('borrower_id','=',borrower_id)]"/>
                        </group>
                        <group>
                            <field name="return_date"/>
                            <field name="note"/>
                        </group>
                    </group>
                    <group>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_return_laptop_tree" model="ir.ui.view">
        <field name="name">return.laptop.tree</field>
        <field name="model">return.laptop</field>
        <field name="arch" type="xml">
            <tree string="Daftar Pengembalian">
                <field name="tingkat_id"/>
                <field name="jurusan_id"/>
                <field name="class_id"/>
                <field name="borrower_id"/>
                <field name="borrow_id"/>   
                <field name="return_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_return_laptop" model="ir.actions.act_window">
        <field name="name">Pengembalian Barang</field>
        <field name="res_model">return.laptop</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
