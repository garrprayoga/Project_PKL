<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_return_laptop_form" model="ir.ui.view">
        <field name="name">return.laptop.form</field>
        <field name="model">return.laptop</field>
        <field name="arch" type="xml">
            <form string="Pengembalian Laptop">
                <header>
                    <button name="action_confirm_return"
                            type="object"
                            string="Konfirmasi Pengembalian"
                            class="btn btn-success"
                            invisible="state == 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>

                <sheet>
                    <group string="Informasi Pengembalian">
                        <field name="class_id"/>
                        <field name="borrower_id"/>
                        <field name="borrow_id"/>
                        <field name="return_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_return_laptop_tree" model="ir.ui.view">
        <field name="name">return.laptop.tree</field>
        <field name="model">return.laptop</field>
        <field name="arch" type="xml">
            <tree string="Daftar Pengembalian">
                <field name="class_id"/>
                <field name="borrower_id"/>
                <field name="borrow_id"/>
                <field name="return_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_return_laptop" model="ir.actions.act_window">
        <field name="name">Pengembalian Laptop</field>
        <field name="res_model">return.laptop</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>