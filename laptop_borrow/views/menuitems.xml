              name="Sistem Peminjaman dan Pengembalian Barang"
              sequence="1"/>

    <!-- MASTER DATA DI DRAWER -->
    <menuitem id="menu_master_root"
              name="Master Data Sekolah"
              parent="menu_laptop_root"
              sequence="5"/>

    <!-- TINGKAT & JURUSAN - SAJA MENUITEM (action di view file) -->
