              name="Tingkat Sekolah"
              parent="menu_master_root"
              action="action_tingkat_sekolah"
              sequence="10"/>

    <menuitem id="menu_jurusan_sekolah"
              name="Jurusan Sekolah"
              parent="menu_master_root"
              action="action_jurusan_sekolah"
              sequence="20"/>

    <!-- OPERASIONAL DI NAVBAR -->
    <menuitem id="menu_kelas"
              name="Data Kelas"
              parent="menu_laptop_root"
              action="action_kelas"
              sequence="30"/>  <!-- ACTION UDAH ADA DI KELAS VIEW -->

    <menuitem id="menu_borrow_laptop"
              name="Peminjaman Barang"
              parent="menu_laptop_root"
              action="action_borrow_laptop"
              sequence="40"/>

    <menuitem id="menu_return_laptop"
              name="Pengembalian Barang"
              parent="menu_laptop_root"
              action="action_return_laptop"
              sequence="50"/>

    <menuitem id="menu_available_laptops"
              name="Barang Tersedia"
              parent="menu_laptop_root"
