<odoo>
    <!-- TREE VIEW -->
    <record id="view_available_laptops" model="ir.ui.view">
        <field name="name">available.laptops.view</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <tree string="Laptop Tersedia">
                <field name="name"/>
                <field name="product_id"/>
                <field name="is_available"/>
            </tree>
        </field>
    </record>

    <!-- ACTION dengan DOMAIN -->
    <record id="action_available_laptops" model="ir.actions.act_window">
        <field name="name">Laptop Tersedia</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">tree</field>

        <!-- FILTER DI SINI -->
        <field name="domain">
            [
            ('product_id.product_tmpl_id.is_laptop', '=', True)
            ]
        </field>

        <field name="context">
            {
                'create': False,
                'edit': False,
            }
        </field>
    </record>
</odoo>