<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_borrow_laptop_form" model="ir.ui.view">
        <field name="name">borrow.laptop.form</field>
        <field name="model">borrow.laptop</field>
        <field name="arch" type="xml">
            <form string="Peminjaman Barang">
                <header>
                    <button name="action_dynamic_borrow_return" type="object" 
                            string="Pinjam Barang" class="btn-primary"
                            invisible="status != 'draft'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,dipinjam,dikembalikan"/>
                </header>
                <sheet>
                    <group string="Informasi Peminjaman">
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="class_id"/>
                            <field name="product_tmpl_id"/>
                            <field name="borrower_id"/>
                        </group>
                        <group>
                            <field name="tujuan_peminjaman"/>
                            <field name="guru_mapel" invisible="tujuan_peminjaman != 'kbm'"/>
                            <field name="keterangan" invisible="tujuan_peminjaman != 'lainnya'"/>
                        </group>
                    </group>
                    <group string="Detail Peminjaman">
                        <group>
                            <field name="jumlah_pinjam"/>
                        </group>
                        <group>
                            <field name="borrow_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Daftar Barang yang Dipinjam">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <!-- âœ… UBAH: Tambah domain filter untuk serial -->
                                    <field name="laptop_serial_id" 
                                           domain="[('product_id.product_tmpl_id', '=', parent.product_tmpl_id), ('product_id.product_tmpl_id.is_borrowable', '=', True)]"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_borrow_laptop_tree" model="ir.ui.view">
        <field name="name">borrow.laptop.tree</field>
        <field name="model">borrow.laptop</field>
        <field name="arch" type="xml">
            <tree string="Daftar Peminjaman">
                <field name="name"/>
                <field name="class_id"/>
                <field name="product_tmpl_id"/>
                <field name="borrower_id"/>
                <field name="tujuan_peminjaman"/>
                <field name="jumlah_pinjam"/>
                <field name="borrow_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_borrow_laptop" model="ir.actions.act_window">
        <field name="name">Peminjaman Barang</field>
        <field name="res_model">borrow.laptop</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>