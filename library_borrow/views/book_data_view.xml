<odoo>
    <record id="book_data_view_tree" model="ir.ui.view">
        <field name="name">book.data.tree</field>
        <field name="model">book.data</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="author"/>
                <field name="total_copies"/>
                <field name="borrowed_count"/>
                <field name="available_copies"/>
            </tree>
        </field>
    </record>

    <record id="book_data_view_form" model="ir.ui.view">
        <field name="name">book.data.form</field>
        <field name="model">book.data</field>
        <field name="arch" type="xml">
            <form string="Data Buku">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author"/>
                        </group>
                        <group>
                            <field name="total_copies"/>
                            <field name="borrowed_count" readonly="1"/>
                            <field name="available_copies" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="book_data_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">book.data</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>