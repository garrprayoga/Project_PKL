<odoo>
    <record id="borrow_order_view_tree" model="ir.ui.view">
        <field name="name">borrow.order.tree</field>
        <field name="model">borrow.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="book_id"/>  
                <field name="borrow_date"/>
                <field name="return_date"/>
                <field name="duration_days"/>
                <field name="state" widget="badge" 
                       decoration-success="state=='returned'" 
                       decoration-warning="state=='borrowed'" 
                       decoration-danger="state=='overdue'"/>
            </tree>
        </field>
    </record>

    <record id="borrow_order_view_form" model="ir.ui.view">
        <field name="name">borrow.order.form</field>
        <field name="model">borrow.order</field>
        <field name="arch" type="xml">
            <form string="Peminjaman Buku">
                <header>
                    <button name="action_borrow"
                            string="Pinjam"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <button name="action_return"
                            string="Kembalikan"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'borrowed'"/>

                    <button name="action_draft"
                            string="Set to Draft"
                            type="object"
                            invisible="state not in ('returned', 'cancel')"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,borrowed,returned"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="book_id"/> 
                        </group>
                        <group>
                            <field name="borrow_date"/>
                            <field name="return_date"/>
                            <field name="duration_days"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="borrow_order_view_search" model="ir.ui.view">
        <field name="name">borrow.order.search</field>
        <field name="model">borrow.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="book_id"/>
                <field name="state"/>
                <filter name="borrowed" string="Dipinjam" domain="[('state','=','borrowed')]"/>
                <filter name="returned" string="Dikembalikan" domain="[('state','=','returned')]"/>
            </search>
        </field>
    </record>

    <record id="borrow_order_action" model="ir.actions.act_window">
        <field name="name">Borrow Orders</field>
        <field name="res_model">borrow.order</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="borrow_order_view_search"/>
    </record>
</odoo>