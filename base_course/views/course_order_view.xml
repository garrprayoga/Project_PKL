<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="course_order_view_tree" model="ir.ui.view">
        <field name="name">course.order.view.tree</field>
        <field name="model">course.order</field>
        <field name="arch" type="xml">
            <tree string="Course Order">
                <field name="name"/>
                <field name="student_id"/>
                <field name="total_price"/>
                <field name="state" widget="badge" decoration-danger="state == 'cancel'" decoration-success="state =='done'"/>
            </tree>
        </field>
    </record>

    <record id="course_order_view_form" model="ir.ui.view">
        <field name="name">course.order.view.form</field>
        <field name="model">course.order</field>
        <field name="arch" type="xml">
            <form string="Course Order">
                <header>
                    <button name="button_confirm"
                        string="Confirm" 
                        type="object"
                        class="oe_highlight" 
                        state="confirm"
                    />
                    <button name="button_done"
                        string="Done" 
                        type="object"
                        class="oe_highlight" 
                        state="done"
                    />
                    <button name="button_draft"
                        string="Set to Draft" 
                        type="object"
                        state="draft"
                    />
                    <button name="button_cancel"
                        string="Cancel" 
                        type="object"
                        state="cancel"
                    />
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,confirm,done,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/> 
                        </group>
                        <group>
                            <field name="total_price"/> 
                        </group>
                    </group>
                    <notebook>
                        <page name="order_line" string="Line">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="course_id"></field>
                                    <field name="price"></field>
                                </tree>
                            </field>                                
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <record id="course_order_search" model="ir.ui.view">
        <field name="name">course.order.search</field>
        <field name="model">course.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="student_id"/>
                <field name="state"/>

                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]" />
                <filter name="filter_confirm" string="Confirmed" domain="[('state', '=', 'confirm')]" />
                <filter name="filter_done" string="Done" domain="[('state', '=', 'done')]" />
                <filter name="filter_cancel" string="Cancelled" domain="[('state', '=', 'cancel')]" />

                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                </group>
                
            </search>
        </field>
    </record>

    <record id="course_order_action" model="ir.actions.act_window">
        <field name="name">Course Order Action</field>
        <field name="res_model">course.order</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="course_order_search"/>
        <!-- <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            
        </field> -->
    </record>
</odoo>
